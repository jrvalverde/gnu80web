\end{description} \section*{\sf Common Variables}  \begin{description}

\item[Modifies]    IATCR
\item[Uses]  LFNPR   NATOMS

\end{description}  \section*{\sf External Subprograms}  \begin{description}

\item[Calls]       IFLD
\item[Called by]   NBODRV

\end{description}
@a
C*****************************************************************************
      subroutine rdcore(JCORE)
C*****************************************************************************
      implicit none
      integer i , Iatcr , Iatno , ii , Ino , Ispin , Iznuc , JCORE ,
     &        jj , Lfnao , Lfnarc , Lfndaf , Lfndef , Lfndm , Lfnin ,
     &        Lfnmo , Lfnnab , Lfnnao , Lfnnbo , Lfnnho
      integer Lfnnlm , Lfnpna , Lfnpnb , Lfnpnh , Lfnpnl , Lfnppa ,
     &        Lfnpr , Ll , Lu , MAXATM , MAXBAS , Munit , Mxao ,
     &        Mxaolm , Mxbo , Natoms , Nbas , Ndim , Norbs
      logical error
C
      parameter (MAXATM=99,MAXBAS=500)
      common /nbflag/ Rohf , Uhf , Ci , Open , Complx , Alpha , Beta ,
     &                Mcscf , Auhf , Ortho
      logical Rohf , Uhf , Ci , Open , Complx , Alpha , Beta , Mcscf ,
     &        Auhf , Ortho
      common /nbatom/ Iatno(MAXATM) , Ino(MAXATM) , Norbs(MAXATM) ,
     &                Ll(MAXATM) , Lu(MAXATM) , Iznuc(MAXATM) ,
     &                Iatcr(MAXATM)
      common /nbinfo/ Ispin , Natoms , Ndim , Nbas , Mxbo , Mxao ,
     &                Mxaolm , Munit
      common /nbio  / Lfnin , Lfnpr , Lfnao , Lfnpna , Lfnnao , Lfnpnh ,
     &                Lfnnho , Lfnpnb , Lfnnbo , Lfnpnl , Lfnnlm ,
     &                Lfnmo , Lfndm , Lfnnab , Lfnppa , Lfnarc ,
     &                Lfndaf , Lfndef
C
C  initialize the atomic core array:
C
      do 100 i = 1 , Natoms
         Iatcr(i) = -1
 100  continue
C
C  read in modifications to the nominal core table:
C
      if ( JCORE.eq.1 ) then
         write (Lfnpr,99001)
 150     call ifld(ii,error)
         if ( .not.(error) ) then
            if ( ii.lt.1 .or. ii.gt.Natoms ) then
C
               write (Lfnpr,99002) ii
               stop
            else
               call ifld(jj,error)
               if ( error ) then
C
                  write (Lfnpr,99003) ii
                  stop
               elseif ( jj.lt.0 ) then
C
                  write (Lfnpr,99004) jj , ii
                  stop
C
99001             format (/1x,
     &                  'Modified core list read from the $CORE keylist'
     &                  )
99002             format (/1x,'ATOM ',i4,' not found on this molecule')
99003             format (/1x,'No core orbitals selected for atom ',i4)
99004             format (/1x,i4,' core orbitals on atom ',i4,
     &                    ' does not make sense')
               else
                  Iatcr(ii) = jj
                  goto 150
               endif
            endif
         endif
      endif
      return
      end
