      subroutine putb(INSTR,LENIN,BB,NBB)
      implicit none
      integer BB , chr , getchr , i , in , INSTR , LENIN , NBB
      dimension INSTR(*) , BB(*)
C          this routine appends the (packed) string "instr", of
C     length "lenin", to the (packed) string "bb", updating the
C     cursor "nbb" as it does.
C2
C     r. a. whiteside - october 1979
C ----------------------------------------------------------------------
C
      in = 0
      do 100 i = 1 , LENIN
         chr = getchr(INSTR,in)
         call puticr(chr,BB,NBB)
 100  continue
      return
C
      end
