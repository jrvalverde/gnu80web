@a
      subroutine ident(A,NMAX,N)
      implicit none
      double precision A , one , zero
      integer i , ip1 , j , N , nm1 , NMAX
      dimension A(NMAX,NMAX)
      data zero/0.0D0/ , one/1.0D0/
C
C
C     sets upper half of a to the identity matrix
C
C
C
C
C
      nm1 = N - 1
      do 100 i = 1 , nm1
         A(i,i) = one
         ip1 = i + 1
         do 50 j = ip1 , N
            A(i,j) = zero
 50      continue
 100  continue
      A(N,N) = one
      return
C
      end
